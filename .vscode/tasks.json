{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-game",
      "type": "shell",
      "command": "cmake --build build",
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run-game",
      "type": "shell",
      "command": "${workspaceFolder}/build/SaveValley.exe",
      "dependsOn": "build-game",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
